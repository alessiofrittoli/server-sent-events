	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "pnpm lint && pnpm test:ci && pnpm test:ci:jsdom && tsup",
		"build:watch": "tsup --watch",
		"release": "node scripts/publish.js --verbose",
		"lint": "eslint",
		"test": "jest --watchAll --verbose",
		"test:jsdom": "JSDOM=true pnpm test",
		"test:ci": "jest --ci --verbose",
		"test:ci:jsdom": "JSDOM=true pnpm test:ci",
		"test:coverage": "pnpm test --coverage",
		"test:ci:coverage": "pnpm test:ci --coverage",
		"test:serve-coverage": "http-server ./coverage/lcov-report --gzip true -p 0 -o --silent",
		"test:coverage:serve": "concurrently --prefix none --kill-others \"jest --watchAll --verbose --coverage\" \"pnpm test:serve-coverage\"",
		"test:coverage:jsdom": "JSDOM=true pnpm test:coverage",
		"test:coverage:jsdom:serve": "JSDOM=true pnpm test:coverage:serve",
		"test:jest": "pnpm test jest.test.ts",
		"test:jest:jsdom": "JSDOM=true pnpm test:jest",
		"test:server-events": "pnpm test server-events.test.ts"
	},
	"devDependencies": {
		"@alessiofrittoli/node-scripts": "^2.0.1",
		"@alessiofrittoli/stream-reader": "^1.1.0",
